{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },

  "crons": [
    {
      "path": "/api/cron/daily-notifications",
      "schedule": "0 9 * * *"
    }
  ],

  "rewrites": [
    {
      "source": "/((?!api|assets).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
